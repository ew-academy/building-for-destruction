
.intro
  background-image url('../img/nodejs-built-for-destruction.jpg')
  background-size cover
  background-position center center

  &-overlay
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    height 100%
    // background-image linear-gradient(45deg, $color-white-default, $color-gray-light, $color-white-default)
    background-color rgba(255, 255, 255, 0.6)

    &-title
      margin 0
      font-family $font-name-bangers
      font-size 10rem
      color $color-green-default
      text-align center

      @media (max-width $metric-small-default)
        margin-bottom 10px
        font-size 6rem

    &-subtitle
      margin -20px 0
      font-family $font-name-bangers
      font-size 4rem
      color $color-green-default
      text-align center

      @media (max-width $metric-small-default)
        font-size 3.5rem

    &-form
      margin 40px 0
      display flex
      justify-content space-between

      @media (max-width $metric-small-default)
        flex-direction column

      &-email
        width 400px
        font-family $font-name-heebo
        border none
        border 1px solid $color-green-default
        padding 19px
        transform skewX(-14deg)
        font-size 1.3rem

        @media (max-width $metric-small-default)
          margin-bottom 10px
          width 300px

      &-btnsubmit
        font-family $font-name-heebo
        font-size 1.3rem
        padding 14px
        border none
        background-color $color-green-default
        color $color-white-default
        transform skewX(-14deg)
