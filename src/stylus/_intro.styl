
.intro
  background-image url('../img/nodejs-built-for-destruction.png')
  background-size 1800px
  background-position center center

  &-overlay
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    height 100%
    // background-image linear-gradient(45deg, $color-white-default, $color-gray-light, $color-white-default)
    background-color rgba(255, 255, 255, 0.7)

    &-title
      margin 0
      font-family $font-name-bangers
      font-size 10rem
      color $color-green-default
      text-align center

    &-subtitle
      margin -20px 0
      font-family $font-name-bangers
      font-size 4rem
      color $color-green-default
      text-align center

    &-form
      margin 40px 0
      display flex
      justify-content space-between

      &-email
        width 400px
        font-family $font-name-heebo
        border none
        border 1px solid $color-green-default
        padding 19px
        transform skewX(-14deg)
        font-size 1.3rem

      &-btnsubmit
        font-family $font-name-heebo
        font-size 1.3rem
        padding 14px
        border none
        background-color $color-green-default
        color $color-white-default
        transform skewX(-14deg)
