
.contact
  background-image url('../img/one-beer-pls-banner.jpg')
  background-size 1800px
  background-position center center

  &-profile
    display flex
    // flex-direction column
    justify-content center
    align-items center
    width 100%
    height 100%
    // background-image linear-gradient(45deg, $color-white-default, $color-gray-light, $color-white-default)
    background-color rgba(255, 255, 255, 0.7)

    &-img
      flex-basis 400px
      margin-right 30px
      height 400px
      background-image url('../img/one-beer-pls.jpg')
      background-size cover
      background-position center center

    &-desc
      flex-basis 500px
      font-size 1.2rem

      > h3
        font-family $font-name-bangers
        color $color-green-default
        font-size 4rem
        margin-bottom 20px
      > p
        font-size 1.4rem
        font-family $font-name-heebo
        color $color-black-default
